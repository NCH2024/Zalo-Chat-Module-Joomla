<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="4.0" client="site" method="upgrade">
  <name>mod_zalo_chat</name>
  <author>Hiệp Nguyễn, Khang Nguyễn</author>
  <version>1.1.0</version>
  <description>Hiển thị liên hệ Zalo nhanh, gọn và tiện lợi trên trang web của bạn</description>
  <files>
    <filename module="mod_zalo_chat">mod_zalo_chat.php</filename>
    <filename>LICENSE.txt</filename>
    <filename>mod_zalo_chat.xml</filename>
    <folder>assets</folder>
    <folder>tmpl</folder>

  </files>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="zalo_phone" type="text" default="0123456789" label="Số điện thoại Zalo" description="Nhập số điện thoại Zalo (chỉ số, không có dấu cách hoặc dấu -)" />
        <field name="call_phone" type="text" default="0123456789" label="Số điện thoại Gọi" description="Nhập số điện thoại để thực hiện cuộc gọi" />
        <field name="button_position" type="list" label="Vị trí nút" default="bottom-left" description="Chọn vị trí hiển thị của nút chat">
          <option value="bottom-left">Dưới bên trái</option>
          <option value="bottom-right">Dưới bên phải</option>
          <option value="top-left">Trên bên trái</option>
          <option value="top-right">Trên bên phải</option>
        </field>
        <field name="button_color" type="color" default="#FFFFFFCC" label="Màu nền nút" />
        <field name="text_color" type="color" default="#005EFF" label="Màu chữ"/>
        <field name="border_color" type="color" default="#002B5F" label="Màu viền nút" />
        <field name="hover_button_color" type="color" default="#03386A" label="Màu nền khi hover" />
        <field name="hover_border_color" type="color" default="#032B71" label="Màu viền khi hover" />
        <field name="hover_text_color" type="color" default="#ffffff" label="Màu chữ khi hover" />
      </fieldset>
    </fields>
  </config>
</extension>